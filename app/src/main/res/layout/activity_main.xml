<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.user.androidtips.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="70sp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Control the flashlight"
                android:textColor="@color/colorText1"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amoled Screen"
                android:textColor="@color/colorText2"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apps Shortcut"
                android:textColor="@color/colorText3"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silent Mode"
                android:textColor="@color/colorText4"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Screen Lock"
                android:textColor="@color/colorText5"
                android:textStyle="bold"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
